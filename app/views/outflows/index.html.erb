<%= link_to 'New Outflow', new_outflow_path %>

<h1>Listing outflows</h1>
<% for numero_do_mes in 1..12 %>
  <h2>
    <%= Date::MONTHNAMES[numero_do_mes] %>
  </h2>
  <table>
    <thead>
      <tr>
        <th>Day</th>          
        <th>Category</th>
        <th>Description</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @outflows.each do |outflow| %>
        <% if outflow.date.month == numero_do_mes  %>
          <%= render partial: "outflow_table", locals: {outflow: outflow} %>
        <% end %>     
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
